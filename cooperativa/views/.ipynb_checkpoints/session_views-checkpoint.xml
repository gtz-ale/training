<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="session_view_form">
            <field name="name">cooperativa.session.form</field>
            <field name="model">cooperativa.session</field>
            <field name="arch" type="xml">
                <form string="Formulario Sesion">
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="cooperativa_id"/>
                                <field name="lider_id"/>
                            </group>
                            <group>
                                <field name="start_time"/>
                                <field name="end_time"/>
                                <field name="duration"/>
                            </group>
                            <notebook>
                                <page string="Voluntarios">
                                    <field name="voluntario_id"/>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="session_view_list">
            <field name="name">cooperativa.session.list</field>
            <field name="model">cooperativa.session</field>
            <field name="arch" type="xml">
                <tree string="Lista Sesiones">
                    <field name="name"/>
                    <field name="lider_id"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="session_view_gantt">
            <field name="name">cooperativa.session.gantt</field>
            <field name="model">cooperativa.session</field>
            <field name="arch" type="xml">
                <gantt string="Gantt Sesiones"
                       start_time="Inicio"
                       end_time="Fin"
                       color="lider_id"
                       mode="month">
                    <field name="name"/>
                    <field name="lider_id"/>
                </gantt>
            </field>
        </record>
                
    </data>
</odoo>