<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="group_cooperativa_admin" model="res.groups">
        <field name="name">Cooperativa / Administrador</field>    
    </record>
    
    <record id="group_cooperativa_user" model="res.groups">
        <field name="name">Cooperativa / Editor</field>    
    </record>
    
    
    <record id="only_active_modify" model="ir.rule">
        <field name="name">Solo tareas activas pueden ser modificados</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="0"/>
        <field name="domain_force">[('active','=','True')]</field>
        <field name="model_id" ref="model_tasks_tareas"/>
    </record>
</odoo>